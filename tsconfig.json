{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["ES2015","ES2015.Promise", "DOM","DOM.Iterable"],
        "target": "ES5",
        "outDir": "dist",
        "types": ["./types/simpli"],
        "watch": true,
        "sourceRoot": "src",
        "sourceMap": true,
        "allowJs": false,
        "removeComments": true,
        "module": "ES6"
    },
    "include": ["src/**/*"],
    "exclude": ["specs/**/*.spec.ts"]
}